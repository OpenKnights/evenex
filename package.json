{
  "name": "evenex",
  "version": "2.0.0",
  "description": "An event bus library implemented in TypeScript.",
  "type": "module",
  "keywords": [
    "evenex",
    "eventbus",
    "event"
  ],
  "license": "MIT",
  "homepage": "https://github.com/OpenKnights/evenex#readme",
  "bugs": {
    "url": "https://github.com/OpenKnights/evenex/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenKnights/evenex.git"
  },
  "author": "king-3 <w2196592083@gmail.com>",
  "files": [
    "dist/"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "scripts": {
    "build": "tsdown --clear --dts",
    "test": "vitest run",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write ./**/*.{ts,json,md}",
    "release": "bumpp && pnpm publish"
  },
  "dependencies": {
    "@king-3/eslint-config": "^1.0.3",
    "bumpp": "^10.2.3",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
